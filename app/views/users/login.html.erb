<div class="ui grid">
  <div class="eight wide column" style="padding-right: 0px;">
    <% random = random_destination %>
    <img src="<%= random.image %>" style="object-fit: cover; object-position: 100% 0; width:100%; height: 430px; padding-right: 5px;">
    <p style="text-align: center;"><%= random.city %>, <%= random.country %>  •  <a href="/destinations/<%= random.id %>">Learn More</a>
  </div>
  <div class="eight wide column">
    <br><br>
    <h8>Please login.</h8>

    <% if session[:invalid] %>
      <p style="color: red"><br>Apologies. In order to access the exclusive features dérive offers, please log in.</p>
    <% end %>

    <% if @user %>
      <% if @user.errors.any? %>
        <ul>
        <% @user.errors.full_messages.each do |m| %>
        <p style="color: red"><li><%= m %></li></p>
        <% end %> </ul>
      <% end %>
    <% end %>

    <% if @error %>
      <br><br><p style="color: red"><%= @error %></p>
    <% end %>


    <%= form_tag "/login", method: "post" %><br>
      <p><strong><%= label_tag :username %><br></strong>
      <% if @index == 2 %>
        <%= text_field_tag :username, @temp %><br>
      <% else %>
        <%= text_field_tag :username %><br>
        <% end %>
      <p><strong><%= label_tag :password %></strong><br>
      <% if @index == 1 %>
        <%= password_field_tag :password, @temp %><br><br></p>
      <% else %>
        <%= password_field_tag :password %><br><br></p>
      <% end %>
      <%= submit_tag "Login" %><br><br>


      <h7>No dérive account?</h7>
      <p>No problem. Click <a href="/users/new">here</a> to make your dérive account.</p>
  </div>
</div>
